<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs'); %>
        <script src="<% appLink %>/public/js/startup.views.js"></script>

</head>

<body>
    <header>
        <%- include('../partials/header.ejs'); %>
    </header>

    <section>
        <div class="container-fluid mb-3">
            <div class="row">
                <div class="col-9 pe-5 ps-0">
                    <div class="container-fluid p-0">

                        <!-- Greetings -->
                        <section>
                            <div class="container-fluid greetings text-white p-5 pb-4">
                                <div class="row pe-5 pb-3 ps-4">
                                    <div class="col-6 d-flex flex-column mt-3">
                                        <% if(data.isLogged==false) { %>
                                            <h2>Selamat <%= data.timeNow %>,<br>Sayang</h2>
                                            <% } else { %>
                                                <h2>Selamat <%= data.timeNow %>,<br>
                                                        <%= data.user.name %>
                                                </h2>
                                                <% } %>
                                                    <p class="me-3"><small>“Kamu tidak harus mengendalikan pikiranmu.
                                                            Anda hanya
                                                            harus berhenti membiarkan mereka mengendalikan Anda.”<br>—
                                                            Dan
                                                            Millman</small></p>
                                    </div>
                                </div>
                                <div class="ps-4">
                                    <audio loop id="music-src"
                                        src="https://docs.google.com/uc?export=download&id=1zHEUqt_zW5vLF5a3ukGuwunfjdAx-vuu"></audio>
                                    <input type="checkbox" class="btn-check" id="btn-check" autocomplete="off">
                                    <label class="btn btn-music" for="btn-check" id="music-icon"><i
                                            class="far fa-volume-mute"></i></label>
                                </div>
                            </div>
                        </section>

                        <!-- Main -->
                        <div class="row pt-5 pb-2">
                            <div class="col-4">

                                <!-- Daftar / Masuk -->
                                <section>
                                    <% if(data.isLogged==false) { %>
                                        <div class="card border-0 ms-5 me-2">
                                            <div class="card-body">
                                                <h5 class="card-title home">Belum memiliki akun?</h5>
                                                <h6 class="card-subtitle home mb-2">Daftar sekarang dan
                                                    dapatkan
                                                    keuntungan lebih...</h6>
                                                <div class="d-flex justify-content-center pt-3">
                                                    <button type="button" onclick="location.href='/login'"
                                                        class="btn rounded-pill button-congo-pink btn-sm p-0 px-4">Masuk/Daftar</button>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- Ads -->
                                        <div class="d-flex flex-column justify-content-center ms-5 me-2">
                                            <img src="<%= appLink %>/public/images/ad1.png" alt="ad1"
                                                class="img-fluid mt-4">
                                            <img src="<%= appLink %>/public/images/ad2.png" alt="ad2"
                                                class="img-fluid mt-4">
                                            <img src="<%= appLink %>/public/images/ad2.png" alt="ad2"
                                                class="img-fluid mt-4">
                                        </div>
                                        <% } else { %>
                                            <div class="card border-0 ms-5 me-2">
                                                <div class="card-body">
                                                    <div class="d-flex flex-column bd-highlight">
                                                        <div class="d-flex bd-highlight">
                                                            <div class="flex-shrink-0">
                                                                <img class="rounded-pill"
                                                                    src="<%= appLink %>/public/images/Avatar <%= data.user.avatar%>"
                                                                    width="34px" height="34px" alt="...">
                                                            </div>
                                                            <div class="flex-shrink-1 ms-2" style="max-width: 81%;">
                                                                <h5 class="card-title home p-0 m-0">
                                                                    <%= data.user.name %>
                                                                </h5>
                                                                <h6 class="home">
                                                                    <%= data.user.email %>
                                                                </h6>
                                                            </div>
                                                        </div>
                                                        <div class="dropdown-divider home-divider"></div>
                                                        <div class="d-flex bd-highlight pb-2">
                                                            <button onclick="isNeedToken('/profile')" type="button" class="btn d-flex">
                                                                <div class="me-2">
                                                                    <i class="far fa-cog"></i>
                                                                </div>
                                                                <h6 class="home mt-1">
                                                                    Pengaturan</h6>
                                                            </button>
                                                        </div>
                                                        <div class="d-flex justify-content-center bd-highlight">
                                                            <button class="btn button-pale-purple p-0 px-5"
                                                                type="button" data-bs-toggle="collapse"
                                                                data-bs-target="#logoutCollapse" aria-expanded="false"
                                                                aria-controls="logoutCollapse">
                                                                Keluar
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="collapse" id="logoutCollapse">
                                                <div class="card border-0 ms-5 me-2">
                                                    <div class="card-body">
                                                        <h6 class="text-center">Anda Yakin Keluar?</h6>
                                                        <div class="d-flex justify-content-around">
                                                            <button id="logoutButton" type="submit"
                                                                class="btn button-logout ok px-4">OK</button>
                                                            <button class="btn button-logout cancel px-4" type="button"
                                                                data-bs-toggle="collapse"
                                                                data-bs-target="#logoutCollapse" aria-expanded="false"
                                                                aria-controls="logoutCollapse">Batal</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <% } %>
                                </section>
                            </div>
                            <div class="col-8">

                                <!-- Menu Utama -->
                                <section>
                                    <div class="card text-white border-0">
                                        <div class="img-stack">
                                            <img class="card-img content"
                                                src="<%= data.articles.newest.thumbnailPicture %>"
                                                alt="<%= data.articles.newest.title %>">
                                        </div>
                                        <div class="card-img-overlay ms-2 mt-3">
                                            <div class="row">
                                                <div class="col-9">
                                                    <a href="/article/<%= data.articles.newest.id %>">
                                                        <h4 class="card-title category">
                                                            <%= data.articles.newest.title %>
                                                        </h4>
                                                    </a>
                                                    <p class="card-text date-category">
                                                        <small>
                                                            <%= data.articles.newest.createdAt %>
                                                        </small>
                                                    </p>
                                                    <button type="button"
                                                        class="btn button-white rounded-pill btn-sm p-0 px-3 mt-2">
                                                        <%= data.articles.newest.category.name %>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </section>

                                <% if(data.isLogged==false) { %>
                                    <div class="mt-3 mb-4">
                                        <div class="dropdown-divider"></div>
                                    </div>

                                    <div class="card border-0">
                                        <div class="row g-0 min-height-100">
                                            <div class="col-md-4 p-2">
                                                <img src="<%= data.articles.mostSaved[data.articles.mostSaved.length - 1].thumbnailPicture %>"
                                                    class="img-fluid rounded min-height-100"
                                                    alt="<%= data.articles.mostSaved[data.articles.mostSaved.length - 1 ].title %>">
                                            </div>
                                            <div class="col-md-8">
                                                <div class="card-body d-flex flex-column min-height-100 ps-2 py-2 pe-3">
                                                    <div class="me-3">
                                                        <a href="#">
                                                            <h5 class="card-title title-content mb-0">
                                                                <%= data.articles.mostSaved[data.articles.mostSaved.length
                                                                    - 1 ].title %>
                                                            </h5>
                                                        </a>
                                                        <p class="card-text main m-0 mt-1 mb-2"><small>
                                                                <%= data.articles.mostSaved[data.articles.mostSaved.length
                                                                    - 1 ].createdAt %>
                                                            </small></p>
                                                        <div class="max-lines-5">
                                                            <p class="card-text sub">
                                                                <%= data.articles.mostSaved[data.articles.mostSaved.length
                                                                    - 1 ].content %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="d-flex">
                                            <% for(let i=0; i<3; i++) { %>
                                                <div class="card sec-content border-0 p-2">
                                                    <img src="<%= data.articles.mostSaved[i].thumbnailPicture %>"
                                                        class="sec-content card-img-top"
                                                        alt="<%= data.articles.mostSaved[i].title %>" style="object-fit: cover;">
                                                    <div class="sec-content pt-2">
                                                        <a href="/article/<%= data.articles.mostSaved[i].id %>">
                                                            <p class="sec-content m-0">
                                                                <%= data.articles.mostSaved[i].title %>
                                                            </p>
                                                        </a>
                                                    </div>
                                                    <small class="sec-content">
                                                        <%= data.articles.mostSaved[i].createdAt %>
                                                    </small>
                                                </div>
                                                <% } %>
                                        </div>
                                    </div>

                                    <!-- Ad -->
                                    <img src="<%= appLink %>/public/images/ad3.png" alt="ad1" class="img-fluid my-4">

                                    <div class="row mb-5">
                                        <div class="col-6">
                                            <% for(let i=0; i<5; i++) { %>
                                                <% if(i%2==0) { %>
                                                    <div class="container-fluid pt-3 px-0">
                                                        <div class="d-flex">
                                                            <div class="box-heliotrope"></div>
                                                            <h6 class="side-text ms-3">
                                                                4 Hari Lalu
                                                            </h6>
                                                        </div>
                                                    </div>
                                                    <% } else { %>
                                                        <div class="container-fluid pt-3 px-0">
                                                            <div class="d-flex">
                                                                <div class="box-congo-pink"></div>
                                                                <h6 class="side-text ms-3">
                                                                    4 Hari Lalu
                                                                </h6>
                                                            </div>
                                                        </div>
                                                        <% } %>
                                                            <div class="card bg-transparent border-0 ms-3">
                                                                <div
                                                                    class="card-body d-flex flex-column justify-content-between min-height-100 ps-2 py-2 pe-3">
                                                                    <div class="side-content">
                                                                        <a
                                                                            href="/article/<%= data.articles.fourDaysAgo[i].id %>">
                                                                            <h5 class="card-title title-content side">
                                                                                <%= data.articles.fourDaysAgo[i].title
                                                                                    %>
                                                                            </h5>
                                                                        </a>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <div class="dropdown-divider mx-4"></div>
                                                            <% } %>
                                        </div>

                                        <div class="col-6">
                                            <% for(let i=0; i<2; i++) { %>
                                                <div class="d-flex flex-column mb-3">
                                                    <img src="<%= data.articles.mostPopular[i].thumbnailPicture %>"
                                                        class="img-fluid min-height-100"
                                                        alt="<%= data.articles.mostPopular[i].title %>">
                                                    <a href="/article/<%= data.articles.mostPopular[i].id %>">
                                                        <h5 class="title-content category mt-3">
                                                            <%= data.articles.mostPopular[i].title %>
                                                        </h5>
                                                    </a>
                                                    <p class="card-text side text-start"><small>
                                                            <%= data.articles.mostPopular[i].createdAt %>
                                                        </small></p>
                                                    <div class="dropdown-divider"></div>
                                                </div>
                                                <% } %>
                                        </div>
                                    </div>
                                    <% } %>
                            </div>
                        </div>
                        <% if(data.isLogged==true) { %>
                            <div class="ms-5">
                                <div class="dropdown-divider"></div>
                            </div>

                            <div class="row ms-5 mt-4">
                                <div class="col-5">
                                    <% for(let i=0; i<5; i++) { %>
                                        <% if(i%2==0) { %>
                                            <div class="container-fluid pt-3 px-0">
                                                <div class="d-flex">
                                                    <div class="box-heliotrope"></div>
                                                    <h6 class="side-text ms-3">
                                                        4 Hari Lalu
                                                    </h6>
                                                </div>
                                            </div>
                                            <% } else { %>
                                                <div class="container-fluid pt-3 px-0">
                                                    <div class="d-flex">
                                                        <div class="box-congo-pink"></div>
                                                        <h6 class="side-text ms-3">
                                                            4 Hari Lalu
                                                        </h6>
                                                    </div>
                                                </div>
                                                <% } %>
                                                    <div class="card bg-transparent border-0 ms-3">
                                                        <div
                                                            class="card-body d-flex flex-column justify-content-between min-height-100 ps-2 py-2 pe-3">
                                                            <div class="side-content">
                                                                <a
                                                                    href="/article/<%= data.articles.fourDaysAgo[i].id %>">

                                                                    <h5 class="card-title title-content side">
                                                                        <%= data.articles.fourDaysAgo[i].title %>
                                                                    </h5>
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="dropdown-divider mx-4"></div>
                                                    <% } %>
                                </div>

                                <div class="col-7">
                                    <% for(let i=0; i<3; i++) { %>
                                        <div class="d-flex flex-column mb-3">
                                            <img src="<%= data.articles.mostPopular[i].thumbnailPicture %>"
                                                class="img-fluid min-height-100"
                                                alt="<%= data.articles.mostPopular[i].title %>">
                                            <a href="<%= data.articles.mostPopular[i].id %>">
                                                <h5 class="title-content mt-3" style="font-size: 18px;">
                                                    <%= data.articles.mostPopular[i].title %>
                                                </h5>
                                            </a>
                                            <p class="card-text text-start" style="font-size: 12px; color: #9a9a9a;">
                                                <small>
                                                    <%= data.articles.mostPopular[i].createdAt %>
                                                </small>
                                            </p>
                                            <div class="dropdown-divider"></div>
                                        </div>
                                        <% } %>
                                </div>
                            </div>
                            <% } %>
                    </div>
                </div>

                <!-- Menu Bagian Kanan -->
                <div class="col-3 pe-4 ps-0">

                    <!-- Tanggal -->
                    <section>
                        <div class="container-fluid">
                            <div class="date">
                                <div class="d-flex justify-content-center py-2">
                                    <h6>
                                        <%= data.dateNow %>
                                    </h6>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Paling Disukai -->
                    <section>
                        <div class="container-fluid pt-5 pb-3 px-0 ">
                            <div class="d-flex bd-highlight">
                                <div class="flex-grow-1 bd-highlight">
                                    <div class="d-flex">
                                        <div class="box-heliotrope"></div>
                                        <h6 class="side-text ms-1">
                                            Paling Disukai
                                        </h6>
                                    </div>
                                </div>
                                <div class="bd-highlight">
                                    <button type="button" class="d-flex btn p-0 m-0"
                                        onclick="clickOthers('paling disukai')">
                                        <small class="other">Lihat Lainnya</small>
                                        <div class="ms-2">
                                            <i class="fas fa-chevron-right"></i>
                                        </div>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <% for(let i=0; i<3; i++) { %>
                            <div class="card side-card border-0 mb-3">
                                <div class="row g-0 min-height-100">
                                    <div class="col-md-4 p-2">
                                        <img src="<%= data.articles.mostPopular[i].thumbnailPicture %>"
                                            class="img-fluid rounded min-height-100"
                                            alt="<%= data.articles.mostPopular[i].title %>" style="object-fit: cover;">
                                    </div>
                                    <div class="col-md-8">
                                        <div
                                            class="card-body d-flex flex-column justify-content-between min-height-100 ps-2 py-2 pe-3">
                                            <div class="side-content">
                                                <a href="/article/<%= data.articles.mostPopular[i].id %>">
                                                    <h5 class="card-title title-content side">
                                                        <%= data.articles.mostPopular[i].title %>
                                                    </h5>
                                                </a>
                                            </div>
                                            <p class="card-text side text-end"><small>
                                                    <%= data.articles.mostPopular[i].createdAt %>
                                                </small></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                    </section>

                    <!-- Spesial Buat Kamu -->
                    <section>
                        <div class="container-fluid pt-5 pb-3 px-0 ">
                            <div class="d-flex bd-highlight">
                                <div class="flex-grow-1 bd-highlight">
                                    <div class="d-flex">
                                        <div class="box-heliotrope"></div>
                                        <h6 class="side-text ms-1">
                                            Spesial Buat Kamu
                                        </h6>
                                    </div>
                                </div>
                                <div class="bd-highlight">
                                    <button type="button" class="d-flex btn p-0 m-0"
                                        onclick="clickOthers('spesial')">
                                        <small class="other">Lihat Lainnya</small>
                                        <div class="ms-2">
                                            <i class="fas fa-chevron-right"></i>
                                        </div>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <% for(let i=0; i<3; i++) { %>
                            <div class="card side-card border-0 mb-3">
                                <div class="row g-0 min-height-100">
                                    <div class="col-md-4 p-2">
                                        <img src="<%= data.articles.specials[i].thumbnailPicture %>"
                                            class="img-fluid rounded min-height-100"
                                            alt="<%= data.articles.specials[i].title %>" style="object-fit: cover;">
                                    </div>
                                    <div class="col-md-8">
                                        <div
                                            class="card-body d-flex flex-column justify-content-between min-height-100 ps-2 py-2 pe-3">
                                            <div class="side-content">
                                                <a href="/article/<%= data.articles.specials[i].id %>">
                                                    <h5 class="card-title title-content side">
                                                        <%= data.articles.specials[i].title %>
                                                    </h5>
                                                </a>
                                            </div>
                                            <p class="card-text side text-end"><small>
                                                    <%= data.articles.specials[i].createdAt %>
                                                </small></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                    </section>

                    <!-- Kasus -->
                    <section>
                        <div class="container-fluid pt-3 pb-3 px-0 ">
                            <div class="d-flex bd-highlight">
                                <div class="flex-grow-1 bd-highlight">
                                    <div class="d-flex">
                                        <div class="box-heliotrope"></div>
                                        <h6 class="side-text ms-1">
                                            Kasus
                                        </h6>
                                    </div>
                                </div>
                                <div class="bd-highlight">
                                    <button type="button" class="d-flex btn p-0 m-0"
                                        onclick="clickOthers('kasus')">
                                        <small class="other">Lihat Lainnya</small>
                                        <div class="ms-2">
                                            <i class="fas fa-chevron-right"></i>
                                        </div>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <% for(let i=0; i<3; i++) { %>
                            <div class="card side-card border-0 mb-3">
                                <div class="row g-0 min-height-100">
                                    <div class="col-md-4 p-2">
                                        <img src="<%= data.articles.cases[i].thumbnailPicture %>"
                                            class="img-fluid rounded min-height-100"
                                            alt="<%= data.articles.cases[i].title %>" style="object-fit: cover;">
                                    </div>
                                    <div class="col-md-8">
                                        <div
                                            class="card-body d-flex flex-column justify-content-between min-height-100 ps-2 py-2 pe-3">
                                            <div class="side-content">
                                                <a href="/article/<%= data.articles.cases[i].id %>">
                                                    <h5 class="card-title title-content side">
                                                        <%= data.articles.cases[i].title %>
                                                    </h5>
                                                </a>
                                            </div>
                                            <p class="card-text side text-end"><small>
                                                    <%= data.articles.cases[i].createdAt %>
                                                </small></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                    </section>

                    <section>
                        <div class="d-flex flex-column justify-content-end" style="height: 100vh;">
                            <img src="<%= appLink %>/public/images/GugGug.gif" alt="guggug">
                        </div>
                    </section>
                </div>

            </div>
        </div>
    </section>

    <footer>
        <%- include('../partials/footer.ejs'); %>
    </footer>
</body>
<script src="<%= appLink %>/public/js/user.logout.js"></script>
<script src="<%= appLink %>/public/js/others.js"></script>

</html>
