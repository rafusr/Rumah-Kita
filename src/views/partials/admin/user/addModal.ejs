<!-- Logout Modal-->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Tambah Pengguna</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">
                            Nama
                        </label>
                        <input type="text" class="form-control" id="name" placeholder="">
                    </div>

                    <div class="form-group">
                        <label for="exampleFormControlInput1">
                            Email
                        </label>
                        <input type="text" class="form-control" id="email" placeholder="">
                    </div>

                    <div class="form-group">
                        <label for="exampleFormControlInput1">
                            Password
                        </label>
                        <input type="password" class="form-control" id="password" placeholder="">
                    </div>

                    
                    <div class="form-group pb-4">
                        <label for="exampleFormControlTextarea1">Gender</label>
                        <input class="form-control" id="gender">
                    </div>

                    <div class="form-group ">
                        <label">Role</label>
                        <select id="role" class="form-control">
                            <% for(let i = 0; i < role.length; i++) { %>
                                <option value="<%= i+1 %>"><%= role[i].name %></option>
                           <% } %>
                        </select>
                    </div>


                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <button class="btn btn-primary" id="addButton" onclick="addData('<%= appLink %>')">Tambah</button>
                <div class="spinner-border text-primary" id="loading-add" role="status" hidden>
                    <span class="sr-only">Loading...</span>
                  </div>
            </div>
        </div>
    </div>
</div>