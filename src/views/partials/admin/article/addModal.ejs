<!-- Logout Modal-->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Tambah Artikel</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">
                            Judul
                        </label>
                        <input type="text" class="form-control" id="add-title" placeholder="">
                    </div>

                    <div class="form-group">
                        <label for="exampleFormControlInput1">
                            Sumber
                        </label>
                        <input type="text" class="form-control" id="add=linkOrigin" placeholder="">
                    </div>

                    <div class="form-group">
                        <label for="exampleFormControlInput1">
                            Link Gambar Thumbnail
                        </label>
                        <input type="text" class="form-control" id="add-thumbnail" placeholder="">
                    </div>

                    
                    <div class="form-group pb-4">
                        <label for="exampleFormControlTextarea1">Content</label>
                        <textarea style="height: 500px;" class="form-control" id="add-content" rows="3"></textarea>
                    </div>

                    <div class="form-group ">
                        <label">Kategori</label>
                        <select id="add-category" class="form-control">
                            <% for(let i = 0; i < category.length; i++) { %>
                                <option value="<%= i+1 %>"><%= category[i].name %></option>
                           <% } %>
                        </select>
                    </div>


                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <a class="btn btn-primary" href="#">Tambah</a>
            </div>
        </div>
    </div>
</div>